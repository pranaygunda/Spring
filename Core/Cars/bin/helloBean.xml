<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
<bean id="hello" class="Carbase">
<property name="name" value="sowmya"/>
<property name="cost" value="40000"/>
</bean>
<bean id="hellobmw" class="BMWCar" parent="hello">
<property name="carname" value="BMW"/>
</bean>
<bean id="hellomer" class="Mercedes" parent="hello">
<property name="carname" value="Mercedes"/>
</bean>
</beans>
